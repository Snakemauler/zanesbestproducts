    <header>
        <div class="header-content">
            <div class="header-content-inner">
                
                <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

  <div class="col-md-4">
    <p>
      <strong>Price:</strong>
      $<%= @product.price %>

    </p>
  </div>


  <div class="col-md-4">
    <p>
      <strong>Image:</strong>
    </p>
    <a href="<%= @product.image_url %>" class="thumbnail" alt="Responsive image">
      <%= image_tag(@product.image_url, class: "img-zoom", data_zoom_image: @product.image_url) %>
    </a>
  </div>

